@model NotAShop.Models.AccuWeathers.AccuWeatherViewModel

<div class="container">
    <h2>Forecast for the selected City</h2>
    <h2>@Html.DisplayFor(model => model.CityName)</h2>
    <hr/>
    <dl class="row text-dark">
        <div class="form-group row">
            <label asp-for="TempMinValue" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.TempMinValue) °C
        </div>
        <div class="form-group row">
            <label asp-for="TempMaxValue" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.TempMaxValue) °C
        </div>
        <div class="form-group row">
            <label asp-for="Text" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Text)
        </div>
        <div class="form-group row">
            <label asp-for="Severity" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Severity)
        </div>
        <div class="form-group row">
            <label asp-for="Category" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Category)
        </div>
        <div class="form-group row">
            <label asp-for="EffectiveDate" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.EffectiveDate)
        </div>

    </dl>
</div>