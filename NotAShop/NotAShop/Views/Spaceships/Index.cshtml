@model IEnumerable<NotAShop.Models.Spaceships.SpaceshipsIndexViewModel>
@{
    int rowNumber = 1;
}

<div class="wrapper style2">
    <section class="container">
        <div class="row">
            <!-- Full-width table -->
            <div class="12u">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2>Spaceships</h2>
                    <a asp-action="Create" asp-controller="Spaceships" class="button primary">Create New Spaceship</a>
                </div>

                <form method="post">
                    <table class="table table-hover table-striped">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Nr</th>
                                <th scope="col">Name</th>
                                <th scope="col">Type</th>
                                <th scope="col">Built Date</th>
                                <th scope="col">Crew</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var spaceship in Model)
                            {
                                <tr>
                                    <td>@rowNumber</td>
                                    <td>@spaceship.Name</td>
                                    <td>@spaceship.Type</td>
                                    <td>@spaceship.BuiltDate</td>
                                    <td>@spaceship.Crew</td>
                                    <td>
                                        <a asp-action="Details" asp-controller="Spaceships" asp-route-id="@spaceship.Id" class="button small">Details</a>
                                        <a asp-action="Update" asp-controller="Spaceships" asp-route-id="@spaceship.Id" class="button primary small">Update</a>
                                        <a asp-action="Delete" asp-controller="Spaceships" asp-route-id="@spaceship.Id" class="button alt small">Delete</a>
                                    </td>
                                </tr>
                                rowNumber++;
                            }
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </section>
</div>