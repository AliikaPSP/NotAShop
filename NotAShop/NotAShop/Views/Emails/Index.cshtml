@model NotAShop.Models.Emails.EmailViewModel

<div>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group-row">
            <label asp-for="To" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="To" class="form-control" />
            </div>
        </div>
        <div class="form-group-row">
            <label asp-for="Subject" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="Subject" class="form-control" />
            </div>
        </div>
        <div class="form-group-row">
            <label asp-for="Body" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <textarea rows="5" asp-for="Body" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group-row">
            <label asp-for="Attachments" class="col-sm-2 col-form-label">Attachments</label>
            <div class="col-sm-5">
                <input asp-for="Attachments" type="file" class="form-control" multiple />
            </div>
        </div>
        <input asp-action="sendEmail" asp-controller="emails" type="submit" class="btn btn-primary" value="Send Email" />
    </form>
</div>
