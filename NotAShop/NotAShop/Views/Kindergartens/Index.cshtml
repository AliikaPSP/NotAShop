@model IEnumerable<NotAShop.Models.Kindergartens.KindergartensIndexViewModel>
@{
    int rowNumber = 1;
}

<div class="wrapper style2">
    <section class="container">
        <div class="row">
            <div class="12u">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2>Kindergartens</h2>
                    <a asp-action="Create" asp-controller="Kindergartens" class="button primary">Create New Kindergarten</a>
                </div>

                <form method="post">
                    <table class="table table-hover table-striped">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Nr</th>
                                <th scope="col">Group Name</th>
                                <th scope="col">Children Count</th>
                                <th scope="col">Kindergarten Name</th>
                                <th scope="col">Teacher</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kindergarten in Model)
                            {
                                <tr>
                                    <td>@rowNumber</td>
                                    <td>@kindergarten.GroupName</td>
                                    <td>@kindergarten.ChildrenCount</td>
                                    <td>@kindergarten.KindergartenName</td>
                                    <td>@kindergarten.Teacher</td>
                                    <td>
                                        <a asp-action="Details" asp-controller="Kindergartens" asp-route-id="@kindergarten.Id" class="button small">Details</a>
                                        <a asp-action="Update" asp-controller="Kindergartens" asp-route-id="@kindergarten.Id" class="button primary small">Update</a>
                                        <a asp-action="Delete" asp-controller="Kindergartens" asp-route-id="@kindergarten.Id" class="button alt small">Delete</a>
                                    </td>
                                </tr>
                                rowNumber++;
                            }
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </section>
</div>
