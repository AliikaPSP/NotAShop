@model NotAShop.Models.F2PGames.F2PGamesIndexViewModel

<h1>Search F2P Games</h1>

<form method="post" asp-action="SearchGames">
    <div>
        <label for="search">Search</label>
        <input asp-for="SearchTerm" class="form-control" id="search" placeholder="Enter a game title, genre, etc." />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.Games != null && Model.Games.Any())
{
    <ul class="game-list">
        @foreach (var game in Model.Games)
        {
            <li class="game-item">
                <div>
                    <img src="@game.Thumbnail" alt="@game.Title" class="game-thumbnail" />
                    <a href="@game.GameUrl" target="_blank">@game.Title</a>
                </div>
                <p>@game.ShortDescription</p>
                <p><strong>Genre:</strong> @game.Genre</p>
                <p><strong>Platform:</strong> @game.Platform</p>
            </li>
        }
    </ul>
}
else
{
    <p>No games found. Try searching for something else!</p>
}
